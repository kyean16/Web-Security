<div class = "page-header">
	<small> Fun Fact: <%= @fact %></small>
</div>
<div class="row" >
	   <div class="col-md-10">
			<div class= "jumbotron">
					<p>Hello <%= @user.name%> </p>
					<%= gravatar_for @user%>
					<p>Add Book to My List </p>
					<%= form_for(@read) do |f| %>
					<%= f.collection_select :book_id, Book.order(:id),:id, :toString , include_blank: false %>
					<%= f.submit "Add Book" %>
					<small> <%=  link_to "Cannot find your book? Add it to our list!", addDatabase_path, class: "btn btn-sm btn-primary" %> </small>
					<% end %>
				</p>
				<p> Books you have read: </p>
				<table class="table table-bordered">
					<tr>
						<td> Title: </td>
						<td> Author: </td>
						<td> ISBN: </td>
						<td> Remove: </td>
					</tr>
					<% @books.each do |f|%>
					<tr>
						<td><%= Book.find_by_id(f.book_id).title %> </td>
						<td><%= Book.find_by_id(f.book_id).authorFirst + " " + Book.find_by_id(f.book_id).authorLast %> </td>
						<td><%= Book.find_by_id(f.book_id).isbn %> </td>
						<td><%= link_to "Remove Book", f, method: :delete, data: {confirm: "Are you sure?"} %> </td>
					</tr>	
					<% end %>
				</table>
			</div>
		</div>
		<div class="col-md-2">
	   		<div id = "stats">
	   			<p> Cool Stats: </p>
	   			<% for i in 0..3 %>
	   			<% numUser %>
	   			<u><%= @statSentence %></u> <br><br>
	   			<%= @stat %> <br> <br>
	   			<%end%>
	       	</div>
	    </div>
</div>